@model IEnumerable<Web2.Models.TheatreShow>

@{
    ViewData["Title"] = "Index";
    var i = 0;
}

<h1>Theatre Shows</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<div class="row">
 @foreach(var item in Model)
    {   
   
            

            <div class="card col-3 px-1 py-3">
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap" height="250px">
                <div class="card-body">
                    <h2 class="card-title">@item.Title</h2>
                    <h5 class="card-text">@item.Place - </h5>
                    <h6 class="card-text">@item.ShowDate</h6>
                    <p class="card-text">@item.Description</p>
                </div>
               
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>

            </div>
       
        
    }
    </div>
</div>